#include<stdio.h>

int main(){
	// Write the program that found the summation of the odd numbers up to n that user has entered.
	
	int n, i,sum=0;
	printf("Enter a number :");
	scanf("%d",&n);
	printf("You entered %d\n",n);
	
	for(i=0; i<n; i++){
		
		if(i%2!=0)
		{
			sum+=i;
		}	
		
	}
	printf("The summation of the odd numbers up to number %d is %d",n,sum);
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	return 0;
}
